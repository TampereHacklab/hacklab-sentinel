doctype html
html
  head
    title hacklab sentinel
    meta(name="viewport", content="width=device-width, initial-scale=1")
    script(src=baseURL + "/js/jquery.min.js")
    link(rel="stylesheet", href=baseURL + "/css/bootstrap.min.css")
    script(src=baseURL + "/js/bootstrap.min.js")
    link(rel="stylesheet", href=baseURL + "/css/style.css")
    script(src=baseURL + "/js/main.js")
    script.
        var baseURL = "#{baseURL}";
  body
    div(class="loader")
        img(src=baseURL + "/images/loader.gif")
    nav(class="navbar navbar-inverse")
        div(class="container-fluid")
            div(class="navbar-header")
                button(type="button", class="navbar-toggle", data-toggle="collapse", data-target="#sentinel-navbar")
                    span(class="icon-bar")
                    span(class="icon-bar")
                    span(class="icon-bar")
                a(class="navbar-brand" href=baseURL) hacklab sentinel
            div(class="collapse navbar-collapse", id="sentinel-navbar")
                ul(class="nav navbar-nav")
                    li
                        a(href=baseURL + "/realtime") realtime
                    li
                        a(href=baseURL + "/history") history
                    if user
                        li
                            a(href=baseURL + "/users") users
                    if user
                        li
                            a(href=baseURL + "/devices") devices
                    if user
                        li
                            a(href=baseURL + "/data-collectors") data collectors
                ul(class="nav navbar-nav navbar-right")
                    li
                        if user
                            a(href=baseURL + "/#")
                                span(class="glyphicon glyphicon-user", style={"margin-right": "5px"})
                                | #{user.username}!
                        else
                            a(href=baseURL + "/login")
                                span(class="glyphicon glyphicon-log-in", style={"margin-right": "5px"})
                                | login

    script.
        var loader = $(".loader");
    block content
