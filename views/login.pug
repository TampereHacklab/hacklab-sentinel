extends layout

block content
  div(class="container")
    if failed
        div(class="alert alert-danger")
          strong Login failed
          |Try again
    h2 Log in
    form(action=baseURL + "/login/local-login", method="post", role="form")
      div(class="form-group")
        label(for="username") Username:
        input(name="username", id="username", placeholder="", class="form-control", autofocus)
    
      div(class="form-group")
        label(for="password") Password:
        input(name="password", id="password", type="password", placeholder="", class="form-control")
      button(type="submit", class="btn btn-default") Login
