extend layout
block content
    script(src="/js/mqtt.min.js")
    script(src="/js/moment.min.js")
    link(rel="stylesheet", href="/css/realtime.css")

    div(class="container-fluid")
        div(class="statistics")
            div(id="received-bytes")
                h1(class="header") Received bytes
                span(class="value")
            div(id="sent-bytes")
                h1(class="header") Sent bytes
                span(class="value")
            div(id="messages-received")
                h1(class="header") Messages received
                span(class="value")
            div(id="messages-sent")
                h1(class="header") Messages sent
                span(class="value")
            div(id="clients-connected")
                h1(class="header") Clients connected
                span(class="value")
            div(id="uptime")
                h1(class="header") Uptime
                span(class="value")
        div(class="underling-container")
    script(src="/js/realtime.js")
